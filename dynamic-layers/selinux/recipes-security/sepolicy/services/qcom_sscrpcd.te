policy_module(qcom_sscrpcd, 1.0)

type qcom_sscrpcd_t;
type qcom_sscrpcd_exec_t;
type qcom_var_cache_sensors_t;
files_type(qcom_var_cache_sensors_t)
type qcom_etc_sensors_t;
